	if (COMPUTE_FORCE(pdata.info) || HAS_INTERNAL_ENERGY(FP::simflags) || DEFORMABLE(pdata.info)) {
		// Compute pressure part of acceleration
		compute_pressure_contrib(params, pdata, ndata, pout, nout);


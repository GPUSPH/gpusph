		common_neib_data(pdata, params, _index, _info, _relPos, _r),
		COND_STRUCT(sph_formulation == SPH_GRENIER &&
			(densitydiffusiontype == COLAGROSSI), volume_particle_data)
			(_index, params),
		COND_STRUCT(sph_formulation == SPH_GRENIER, grenier_particle_data)(_index, params),
		_sa_boundary_neib_data(pdata, params, _index, _relPos),
		_dummy_boundary_neib_data(pdata, params, _index, _relPos),
		_cspm_neib_data(params, _index, pdata, *this),
		_delta_sph_neib_data(_index, params),
		_fea_particle_data(params, _index, _info),
		_eulerVel_neib_data(pdata, _index, _info, params),
		COND_STRUCT(has_effective_visc, effective_visc_particle_data)(_index, _info, pdata, params),
		COND_STRUCT(has_keps, keps_particle_data)(_index, _info, params),
		COND_STRUCT(has_sps, sps_particle_data)(_index, params),
		p_precalc_particle_data(*this)
	{}
};


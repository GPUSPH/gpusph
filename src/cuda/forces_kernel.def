	// max value of \nabla \gamma_{as} \cdot {v_{as}, v_a - u_s, u_s + v_s} for cfl condition
	float	gammaCfl;

	__device__ __forceinline__
	gamma_cfl_particle_output() :
		gammaCfl(0.0f)
	{}

